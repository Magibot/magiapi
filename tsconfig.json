{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./_build",
    "lib": ["es2015", "esnext.asynciterable", "dom"],
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
